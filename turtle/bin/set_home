
--set_home

--[[
  Place the turtle and run this to 
  create etc/home, which will contain 
  the coords of his "home" spot.

  move.go_home() will take him back to 
  that spot.

  Set home point, save its coords as 
  "home_x", "home_y", "home_z":
    > bin/find_home

  Set home point, save its coords as 
  "other_x", "other_y", "other_z":
    > bin/find_home other
--]]

os.loadAPI("lib/move")
os.loadAPI("lib/settings")

local args = {...}
local name = args[1] or 'home'

if not move.test_gps() then error("GPS system is down!") end
local c = vector.new( gps.locate(2) )
settings.set(name .. '_x', c.x)
settings.set(name .. '_y', c.y)
settings.set(name .. '_z', c.z)
settings.set(name .. '_vec', c)

print("Home point '"..name.."' has been set!")

 -- vim: syntax=lua

